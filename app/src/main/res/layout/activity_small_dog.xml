<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SmallDog"
    android:background="#2c3639">
    <TextView
        android:id="@+id/selectionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select the animal you want to know about!"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:textSize="20sp"
        android:fontFamily="@font/lggothic"
        android:padding="10sp"
        android:layout_marginTop="10sp"/>

    <ListView
        android:id="@+id/smallDogList"
        android:layout_width="match_parent"
        android:layout_height="500dp" >

    </ListView>

    <Button
        android:id="@+id/goBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go Back"
        android:backgroundTint="#dcd7c9"
        android:textColor="@color/black"
        android:fontFamily="@font/lggothic"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"/>
</LinearLayout>